generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  message   String
  gridRow   Int
  gridCol   Int
  spanCols  Int      @default(1)
  color     String   @default("#1a1a1a")
  size      String   @default("medium")
  imagePath String?
  createdAt DateTime @default(now())

  @@unique([gridRow, gridCol])
}
